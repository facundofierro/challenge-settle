{
    "compilerOptions": {
        "target": "es2018", 
        "module": "commonjs", 
        "rootDir": "./", 
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types",
        ]
    },
    "include": [
        "./src/**/*.ts",
  ],
    "exclude": [
        "node_modules"
    ]
}